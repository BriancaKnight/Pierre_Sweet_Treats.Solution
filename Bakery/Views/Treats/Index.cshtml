@using Bakery.Models;

<h2>Treats</h2>
<p style="text-align: center;">Click an Treat to see it's flavors!<p>

<div class="list">
<br>
@if (@Model.Count == 0)
{
  <h3>No Treats have been added yet!</h3>
}
else
{
  <ul>
  @foreach (Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</li>
  }
  </ul>
}
</div>
<br>
@if (User.Identity.IsAuthenticated)
{
<div class="view-nav">
<button>@Html.ActionLink("Add new Treat", "Create")</button>
<button>@Html.ActionLink("Go Home", "Index", "Home")</button>
</div>
}
else
{
<div class="view-nav">
<button>@Html.ActionLink("Go Home", "Index", "Home")</button>
</div>
}