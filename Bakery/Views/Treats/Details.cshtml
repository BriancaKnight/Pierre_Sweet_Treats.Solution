@model Bakery.Models.Treat
@using Bakery.Models;
@using System.Collections.Generic;

<h2>Treat Details</h2>
@if (User.Identity.IsAuthenticated)
{
    <br />
    <div class="list">
        <h3>Treat Name : @Model.TreatName</h3>

        @if (Model.JoinEntities.Count == 0)
        {
            <p>This Treat does not have any flavor.</p>
        }
        else
        {
            <h4>This Treat's flavors:</h4>
            <ul>
                @foreach (FlavorTreat join in Model.JoinEntities)
                {
                    <li>@join.Flavor.FlavorName</li>

                    @using (Html.BeginForm("DeleteJoin", "Treats"))
                    {
                        @Html.Hidden("joinId", @join.FlavorTreatId)
                        <input type="submit" value="Delete" />
                    }
                }
            </ul>
        }
    </div>
    <br />
    <div class="view-nav">
    <button>@Html.ActionLink("Edit Treat", "Edit", new { id = Model.TreatId})</button>
    <button>@Html.ActionLink("Delete Treat", "Delete", new { id = Model.TreatId})</button>
    <button>@Html.ActionLink("Back to Treat list", "Index")</button>
    <button>@Html.ActionLink("Add Flavor to this Treat", "AddFlavor", new { id = Model.TreatId})</button>
</div>
}
else
{
    <br />
    <div class="list">
        <h3>Treat Name : @Model.TreatName</h3>

        @if (Model.JoinEntities.Count == 0)
        {
            <p>This Treat does not have any flavor.</p>
        }
        else
        {
            <h4>This Treats's flavors:</h4>
            <ul>
                @foreach (FlavorTreat join in Model.JoinEntities)
                {
                    <li>@join.Treat.TreatName</li>
                }
            </ul>
        }
    </div>
    <br />
}

<div class="view-nav">
    <button>@Html.ActionLink("Back to Treat list", "Index")</button>
</div>
