@using Bakery.Models;

<h2>Flavors</h2>
<p style="text-align: center;">Click an Flavor to see included treats!<p>

<div class="list">
<br>
@if (@Model.Count == 0)
{
  <h3>No Flavors have been added yet!</h3>
}
else
{
  <ul>
  @foreach (Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li>
  }
  </ul>
}
</div>
<br>

@if (User.Identity.IsAuthenticated)
{
<div class="view-nav">
<button>@Html.ActionLink("Add new Flavor", "Create")</button>
<button>@Html.ActionLink("Go Home", "Index", "Home")</button>
</div>
}
else
{
<div class="view-nav">
<button>@Html.ActionLink("Go Home", "Index", "Home")</button>
</div>
}